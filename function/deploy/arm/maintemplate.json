{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "ResourceNamePrefix": {
            "type": "String",
            "metadata": {
                "description": "This prefix will be used for all the resources created by this template."
            }
        },
        "AppServicePlan": {
            "type": "string",
            "defaultValue": "B1",
            "allowedValues": [
                "F1",
                "D1",
                "B1",
                "S1"
            ],
            "metadata": {
                "description": "The function is responsible for emitting meters to the Azure managed Application metering API. The recommended plan is B1."
            }
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Location for all resources."
            }
        }
    },
    "variables": {
        "AppServicePlanName": "[concat(parameters('ResourceNamePrefix'), uniqueString(resourceGroup().id), 'as')]",
        "FunctionAppName": "[concat(parameters('ResourceNamePrefix'), uniqueString(resourceGroup().id), 'func')]",
        "FunctionStorageName": "[concat(replace(parameters('ResourceNamePrefix'), '-', ''), uniqueString(resourceGroup().id))]",
        "PackageURI": "https://github.com/dstarr/ama-cu/blob/main/function/deploy/function/func.zip?raw=true",
        "ContributorRoleDefinitionId": "[concat('/subscriptions/', subscription().subscriptionId, '/providers/Microsoft.Authorization/roleDefinitions/b24988ac-6180-42a0-ab88-20f7382dd24c')]",
        "ResourceGroupRoleAssignmentId": "[guid(concat(resourceGroup().id, 'contributor'))]"
    },
    "resources": [
        {
            "type": "Microsoft.Storage/storageAccounts",
            "name": "[variables('FunctionStorageName')]",
            "apiVersion": "2021-06-01",
            "location": "[parameters('location')]",
            "kind": "Storage",
            "sku": {
                "name": "Standard_LRS"
            }
        },
        {
            "type": "Microsoft.Web/serverfarms",
            "apiVersion": "2021-02-01",
            "name": "[variables('AppServicePlanName')]",
            "location": "[parameters('location')]",
            "sku": {
                "name": "[parameters('AppServicePlan')]"
            },
            "properties": {
                "name": "[variables('AppServicePlanName')]"
            }
        },
        {
            "apiVersion": "2021-02-01",
            "type": "Microsoft.Web/sites",
            "name": "[variables('FunctionAppName')]",
            "location": "[parameters('location')]",
            "kind": "functionapp",
            "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms', variables('AppServicePlanName'))]",
                "[resourceId('Microsoft.Storage/storageAccounts', variables('FunctionStorageName'))]"
            ],
            "identity": {
                "type": "SystemAssigned"
            },
            "properties": {
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('AppServicePlanName'))]",
                "siteConfig": {
                    "appSettings": [
                        {
                            "name": "AzureWebJobsStorage",
                            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', variables('FunctionStorageName'), ';EndpointSuffix=', environment().suffixes.storage, ';AccountKey=',listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('FunctionStorageName')), '2021-06-01').keys[0].value)]"
                        },
                        {
                            "name": "WEBSITE_CONTENTAZUREFILECONNECTIONSTRING",
                            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', variables('FunctionStorageName'), ';EndpointSuffix=', environment().suffixes.storage, ';AccountKey=',listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('FunctionStorageName')), '2021-06-01').keys[0].value)]"
                        },
                        {
                            "name": "WEBSITE_CONTENTSHARE",
                            "value": "[toLower(variables('FunctionAppName'))]"
                        },
                        {
                            "name": "FUNCTIONS_EXTENSION_VERSION",
                            "value": "~4"
                        },
                        {
                            "name": "WEBSITE_NODE_DEFAULT_VERSION",
                            "value": "~10"
                        },
                        {
                            "name": "FUNCTIONS_WORKER_RUNTIME",
                            "value": "powershell"
                        }
                    ]
                }
            },
            "resources": [
                {
                    "apiVersion": "2020-12-01",
                    "name": "MSDeploy",
                    "type": "extensions",
                    "dependsOn": [
                        "[resourceId('Microsoft.Web/Sites', variables('FunctionAppName'))]"
                    ],
                    "properties": {
                        "packageUri": "[variables('PackageURI')]"
                    }
                }
            ]
        },
        {
            "type": "Microsoft.Authorization/roleAssignments",
            "apiVersion": "2020-04-01-preview",
            "name": "[variables('ResourceGroupRoleAssignmentId')]",
            "dependsOn": [
                "[resourceId('Microsoft.Web/Sites', variables('FunctionAppName'))]"
            ],
            "properties": {
                "roleDefinitionId": "[variables('ContributorRoleDefinitionId')]",
                "principalId": "[reference(concat('Microsoft.Web/sites/', variables('FunctionAppName')), '2021-02-01', 'Full').identity.principalId]",
                "scope": "[resourceGroup().id]",
                "principalType": "ServicePrincipal"
            }
        }
    ],
    "outputs": {
        "FunctionAppIdentity": {
            "type": "string",
            "value": "[reference(concat('Microsoft.Web/sites/', variables('FunctionAppName')), '2021-02-01', 'Full').identity.principalId]"
        }
    }
}