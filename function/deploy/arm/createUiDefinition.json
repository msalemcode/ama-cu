{
    "$schema": "https://schema.management.azure.com/schemas/0.1.2-preview/CreateUIDefinition.MultiVm.json#",
    "handler": "Microsoft.Azure.CreateUIDef",
    "version": "0.1.2-preview",
    "parameters": {
        "basics": [
            {}
        ],
        "steps": [
            {
                "name": "settings",
                "label": "Settings",
                "elements": [
                    {
                        "name": "ddlAppServicePlanSku",
                        "type": "Microsoft.Common.DropDown",
                        "label": "App Service Plan SKU",
                        "defaultValue": "B1",
                        "toolTip": "App Service Plan SKU",
                        "constraints": {
                            "allowedValues": [
                                {
                                    "label": "B1",
                                    "value": "B1"
                                },
                                {
                                    "label": "D1",
                                    "value": "D1"
                                },
                                {
                                    "label": "F1",
                                    "value": "F1"
                                },
                                {
                                    "label": "S1",
                                    "value": "S1"
                                }
                            ],
                            "required": true
                        },
                        "visible": true
                    },
                    {
                        "name": "txtPrefix",
                        "type": "Microsoft.Common.TextBox",
                        "label": "Resource Prefix",
                        "toolTip": "All resource names will start with this value. It must be exactly 3 characters long.",
                        "constraints": {
                            "required": true,
                            "regex": "^[a-z][a-z0-9]{2,2}$",
                            "validationMessage": "Only alphanumeric lowercase characters are allowed, and the value must be 3 characters long."
                        },
                        "visible": true
                    }
                ]

            }
        ],
        "outputs": {
            "location": "[location()]",
            "AppServicePlan": "[steps('settings').ddlAppServicePlanSku]",
            "ResourceLocation": "[location()]",
            "ResourceNamePrefix": "[steps('settings').txtPrefix]"
        }
    }
}